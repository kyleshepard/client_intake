{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "meteor": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": [2,4],
    "react/jsx-indent": [2,4],
    "react/jsx-indent-props": [2,4],
    "quote-props": [1, "as-needed"],
    "no-underscore-dangle": "off",
    "quotes": "off",
    "jsx-quotes": "off",
    "max-len": [2,120]
  },
  "settings": {
    "import/resolver": "meteor",
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "fragment": "Fragment",
      "version": "detect",
      "flowVersion": "0.53"
    },
    "propWrapperFunction": [
      "forbidExtraProps",
      {"property": "freeze", "object": "Object"},
      {"property":  "myFavoriteWrapper"}
    ],
    "linkComponents": [
      "Hyperlink",
      {"name":  "Link", "linkAttributes":  "to"}
    ]
  }
}